<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nmoor</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Nmoor", "Nmoor", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (Session["username"] != null)
            {
                <div class="navbar-header" style="color:white; padding:9px; margin-left:10px; float:right; font-weight:600;">
                   Hi @Session["username"],
                    @Html.ActionLink("Logout", "Logout", "Home", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <div class="container">
            <footer>
                <p>&copy; @DateTime.Now.Year - Nmoor.Inc</p>
            </footer>
        </div>
        
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>